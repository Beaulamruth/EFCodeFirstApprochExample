@model EFCodeFirstApprochExample.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="form-row mx-auto" style="width:300px;">
        <div class="form-group col-md-12">
            @Html.LabelFor(l => l.UserName)
            @Html.TextBoxFor(l => l.UserName, new { @class = "form-control", placeholder = "User Name" })
            @Html.ValidationMessageFor(l => l.UserName)
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(l => l.Password)
            @Html.PasswordFor(l => l.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(l => l.Password)
        </div>

        @Html.ValidationSummary()
        <button type="submit" class="btn btn-success">Login</button>
    </div>
}

